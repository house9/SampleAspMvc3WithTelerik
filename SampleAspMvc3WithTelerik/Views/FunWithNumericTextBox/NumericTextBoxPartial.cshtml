@model dynamic
@using Telerik.Web.Mvc.UI;

@{
	string numericTextBoxName = Model.name;
	double value = Model.value;
}

@Html.Telerik(
	).NumericTextBox(
	).Name(numericTextBoxName
	).InputHtmlAttributes(new {style = "width: 40px"}
	).EmptyMessage(""
	).Spinners(false
	).MinValue(0
	).MaxValue(24
	).IncrementStep(0.25
	).DecimalDigits(2
	).Value(value)